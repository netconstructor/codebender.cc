<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
<channel>
	<title>{{ site_name }} blog</title>
	<link>{{ app.request.uriForPath("") }}</link>
	<description>news and trivia about {{ site_name }}</description>
{#
    <lastBuildDate>Mon, 28 Aug 2006 11:12:55 -0400 </lastBuildDate>
    <pubDate>Tue, 29 Aug 2006 09:00:00 -0400</pubDate>
#}
	{% for post in posts %}
	<item> 
		<title>{{ post.title }}</title>  
		<link>{{ url('AceBlogBundle_blog') }}</link>  
		<description><![CDATA[{{ post.text | raw }}]]></description>  
		<pubDate>{{ post.date | date('r') }}</pubDate>  
	</item>  
	{% endfor %}
</channel> 
</rss>

